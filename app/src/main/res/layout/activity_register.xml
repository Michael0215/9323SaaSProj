<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="32dp"
    android:background="@drawable/register">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="User Register"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:drawablePadding="8dp"
        android:hint="Please enter e-mail here"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_username"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:drawablePadding="8dp"
        android:hint="Please enter password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_password"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:drawablePadding="8dp"
        android:hint="Please enter confirmed password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_below="@+id/et_confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:alpha="0.7"
        android:backgroundTint="#00A2E8"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/buttonCancel"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#A2D5F2"
        android:scaleType="centerCrop"
        android:src="@drawable/return1" />

