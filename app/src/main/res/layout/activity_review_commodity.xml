<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <TextView-->
    <!--        android:id="@+id/tv_publish_info"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="#7ED6D8"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:text="Post Forum"-->
    <!--        android:textColor="@color/brown"-->
    <!--        android:textSize="40sp"-->
    <!--        android:textStyle="italic" />-->
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:text="刷新"
        android:textColor="@color/purple_500"
        android:textSize="24sp" />
    <ImageView
        android:id="@+id/iv_commodity"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon" />
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="25dp"
        android:text="返回"
        android:textColor="@color/purple_500"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/ib_my_love"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="335dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="65dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_commodity"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="Title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_title"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_commodity"
        android:layout_marginStart="125dp"
        android:layout_marginTop="5dp"
        android:text="Edit title"
        android:maxLines="1"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="Category"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/spn_type"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_title"
        android:layout_marginStart="125dp"
        android:layout_marginTop="1dp"
        android:text="Category"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="E-mail"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_email"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spn_type"
        android:layout_marginStart="125dp"
        android:layout_marginTop="1dp"
        android:text="Please enter your E-mail"
        android:maxLines="1"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_phone"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="Description"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/et_description"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_description"
        android:layout_marginStart="25dp"
        android:layout_marginTop="1dp"
        android:gravity="top|start"
        android:text="Please enter a brief description of your problems"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />
    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_description"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:paddingStart="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a comment:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/purple_700"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="提交评论"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="2dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_comment"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="评论内容:"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_comment"
        android:padding="8dp" />
</RelativeLayout>