<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_publish_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C2E46"
        android:gravity="center_horizontal"
        android:text="Question"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_no_comments_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="NO COMMENTS"
        android:textColor="@color/gray"
        android:textSize="30sp"/>

    <ImageButton
        android:id="@+id/tv_refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="322dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/refresh1" />

    <ImageButton
        android:id="@+id/ib_my_love"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="105dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/collection1" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_publish_info"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_title"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_publish_info"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="Edit title"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="Category"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/spn_type"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_title"
        android:layout_marginStart="125dp"
        android:layout_marginTop="1dp"
        android:text="Category"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_email_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="E-mail"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_email"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spn_type"
        android:layout_marginStart="125dp"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:text="Please enter your E-mail"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_email_title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="Description"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_description"
        android:layout_marginStart="25dp"
        android:layout_marginTop="1dp"
        android:fadeScrollbars="false"
        android:gravity="top|start"
        android:scrollbars="vertical"
        android:text="Please enter a brief description of your problems"
        android:textColor="@color/teal_700"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_description"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <View
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/purple_700"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_comment"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="Comments:"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_comment"
        android:padding="8dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:src="@drawable/ic_back"
        android:tint="@color/white"
        />
</RelativeLayout>