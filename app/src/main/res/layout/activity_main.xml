<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#1C2E46"
        android:gravity="center_horizontal"
        android:text="Health and Medical Forum"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/tv_refresh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="370dp"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/refresh1" />

    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/ib_learning_use"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_marginStart="35dp"
        android:layout_marginTop="55dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/self_diagnosis" />

    <ImageButton
        android:id="@+id/ib_electric_product"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_student_number"
        android:layout_marginStart="130dp"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/prevent" />

    <ImageButton
        android:id="@+id/ib_daily_use"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv_student_number"
        android:layout_marginStart="225dp"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/cure" />

    <ImageButton
        android:id="@+id/ib_sports_good"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/tv_student_number"
        android:layout_marginStart="310dp"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/general" />

    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_learning_use"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00A2E8"
        android:text="Self diagnosis"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_electric_product"
        android:layout_marginTop="10dp"
        android:layout_marginStart="125dp"
        android:backgroundTint="#00A2E8"
        android:text="Prevention"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_daily_use"
        android:layout_marginStart="235dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00A2E8"
        android:text="Cure"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/ib_sports_good"
        android:layout_marginStart="315dp"
        android:layout_marginTop="1dp"
        android:text="General"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view2"
        android:layout_below="@+id/tv_electric_product"
        android:layout_marginTop="4dp" />

    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:background="@color/purple_700"
        android:layout_marginTop="70dp"/>

    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/chat" />
    <View android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="130dp"
        android:background="@color/purple_700"
        android:layout_marginLeft="130dp" />

    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/tv_add_product"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/post" />
    <View android:id="@+id/view3"
        android:layout_above="@+id/view4"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp" />

    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/personal_information" />

    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="1dp"
        android:text="Live chat"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="184dp"
        android:layout_marginBottom="1dp"
        android:text="Post"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="287dp"
        android:layout_marginBottom="1dp"
        android:text="Personal Center"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/green" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Input the keyword you want to search"
        android:maxLines="1"
        android:textColor="@color/teal_700"
        android:textSize="16sp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/brown"
        android:text="Go"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />
</RelativeLayout>